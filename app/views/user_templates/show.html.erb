<h2>Own photos (<%= @the_user.own_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
    </th>
  </tr>

<% @the_user.own_photos.each do |post| %>

 <tr>
      <td>
        <img src=<%= post.image %>>
      </td>

      <td>
        <%= post.poster.username %>
      </td>

      <td>
        <%= post.caption %>
      </td>

      <td>
        <%= post.created_at %>
      </td>

      <td>
        <a href="/photos/<%= post.id %>">
          Show details
        </a>
      </td>
    </tr>

<% end %>
</table>

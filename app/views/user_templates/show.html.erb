  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/update_user/102" method="post">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" value="<%= @the_user.username %>">

      <button>Update user</button>
    </form>
